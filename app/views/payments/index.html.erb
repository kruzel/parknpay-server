<h1>Listing payments</h1>

<table>
  <tr>
    <th>X pos</th>
    <th>Y pos</th>
    <th>Street</th>
    <th>Area</th>
    <th>City</th>
    <th>Bank Account</th>
    <th>Rate</th>
    <th>User</th>
    <th>Start time</th>
    <th>End time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.x_pos %></td>
    <td><%= payment.y_pos %></td>
    <td><%= payment.street %></td>
    <td><%= payment.area %></td>
    <td><%= payment.city %></td>
    <td><%= payment.bank_account %></td>
    <td><%= payment.rate %></td>
    <td><%= payment.user %></td>
    <td><%= payment.start_time %></td>
    <td><%= payment.end_time %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

