<!-- NAVBAR
    ================================================== -->
<div class="navbar-wrapper">
  <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
  <div class="container">

    <div class="navbar navbar-inverse nav">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">INIGO - Park'N PAY</a>

          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="divider-vertical"></li>
              <li><a href="/"><i class="icon-home icon-white"></i> Home</a></li>
              <li><a href="/about">About</a></li>
              <li><%= link_to 'Contact', "/contact" %></li>
              <% if user_signed_in? %>
              <li><%= link_to "Dashboard", :controller => "/u_dashboard", :action => :index %></li>
               <% end %>
            </ul>
            <div class="pull-right">
              <ul class="nav pull-right">
                <% if user_signed_in? %>
                  <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, <%= User.find(current_user.id).firstname %><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><a href="/user/preferences"><i class="icon-cog"></i> Preferences</a></li>
                      <li><a href="/help/support"><i class="icon-envelope"></i> Contact Support</a></li>
                      <li class="divider"></li>
                      <li><a href="/users/sign_out" data-method="delete" rel="nofollow"><i class="icon-off"></i> Logout</a></li>
                    </ul>
                  </li>
                  <li>
                    <%= link_to image_tag(@user.avatar.url(:thumb),:class=>"img-rounded "), {:action => 'index', :controller => "/u_dashboard",:anchor => "Personal"}, {:style => 'padding: 0px;'} %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to 'Login', new_user_session_path %>
                  </li>
                <% end %>
                <li>
                  <% if !user_signed_in? %>
                    <%= link_to('Register', new_user_registration_path)  %>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- /.container -->
</div><!-- /.navbar-wrapper -->

<script>
  $(document).ready(function() {
    if (location.hash !== '') $('a[href="' + location.hash + '"]').tab('show');
    return $('a[data-toggle="tab"]').on('shown', function(e) {
      return location.hash = $(e.target).attr('href').substr(1);
    });
});
  
</script>