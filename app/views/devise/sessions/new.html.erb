

<div class="container">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
<h2 class="form-signin-heading">Please sign in</h2>  
<div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :class => "input-block-level",:placeholder=>"Email address" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "input-block-level",:placeholder=>"Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "checkbox"%></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>