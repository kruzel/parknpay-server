<h1>Listing rates</h1>

<table>
  <tr>
    <th>Rate</th>
    <th>Currency</th>
    <th>Area</th>
    <th>Start Day A Week</th>
    <th>End  Day A Week</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Valid starting</th>
    <th>Valid till</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rates.each do |rate| %>
  <tr>
    <td><%= rate.rate %></td>
    <td><%= rate.currency %></td>
    <td><%= rate.area.name %></td>
    <td><%= rate.start_day_a_week %></td>
    <td><%= rate.end_day_a_week %></td>
    <td><%= l rate.start_time, :format =>  "%H:%M" %></td>
    <td><%= l rate.end_time, :format =>  "%H:%M" %></td>
    <td><%= rate.valid_start_at %></td>
    <td><%= rate.valid_end_at %></td>
    <td><%= link_to 'Show', [rate.area.city, rate.area, rate] %></td>
    <td><%= link_to 'Edit', edit_city_area_rate_path(rate.area.city, rate.area, rate) %></td>
    <td><%= link_to 'Destroy', [rate.area.city, rate.area, rate], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

