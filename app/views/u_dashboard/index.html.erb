<div class="container" style="padding: 20px; height: 500px;">
      <div class="row-fluid">
        <div class="span12">
          <div id="map_canvas" style="width:100%;height:350px;"></div>
        </div>
      </div>
    </div>

<%= javascript_include_tag "http://maps.googleapis.com/maps/api/js?key=AIzaSyC6mNDw1ovtoHdf2EhOysA7drYS5JT5QCw&sensor=false" %>

<script>
  var myCenter = new google.maps.LatLng(-33.878199, 151.234898);
  function initialize()
  {
    var mapProp = {
      center: myCenter,
      zoom: 12,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    // Array object
    var map = new google.maps.Map(document.getElementById("map_canvas"), mapProp);

    var marker = new google.maps.Marker({
      position: myCenter,
    });

    marker.setMap(map);
  }
  google.maps.event.addDomListener(window, 'load', initialize);

</script>