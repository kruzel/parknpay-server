<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, class: 'well' } do |f| %>
    <legend>
      Set Password
    </legend>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token, :value => params[:invitation_token] %>

    <div class="input-prepend">
      <span class="add-on"><i class="icon-key"></i></span>
      <%= f.password_field :password, class: 'span2', placeholder: 'Password' %>
    </div>

    <div class="input-prepend">
      <span class="add-on"><i class="icon-key"></i></span>
      <%= f.password_field :password_confirmation, class: 'span2', placeholder: 'Confirm password' %>
    </div>
    <span>at least 8 characters</span>

    <div class="input-prepend">
      <button class="btn btn-danger"><i class="icon-check"></i> Set Password</button>
    </div>
<% end %>
