<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'well' } do |f| %>
  <legend>
    Sign up
  </legend>
  <%= devise_error_messages! %>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= f.email_field :email, autofocus: true, class: 'span2', placeholder: 'Email address' %>
  </div>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.password_field :password, class: 'span2', placeholder: 'Password' %>
  </div>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.password_field :password_confirmation, class: 'span2', placeholder: 'Confirm password' %>
  </div>
    <span>at least 8 characters</span>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.text_field :firstname, class: 'span2', placeholder: 'First name' %>
  </div>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.text_field :lastname, class: 'span2', placeholder: 'Last name' %>
  </div>
    <span>at least 2 characters</span>

  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.text_field :address_st, class: 'span2', placeholder: 'Street address' %>
  </div>

  <label>
    <%= f.check_box :terms_of_service %> I agree to all <a href="#">Terms of Services</a>
  </label>
  <br>

  <div class="input-prepend">
    <button class="btn btn-danger"><i class="icon-check"></i> Sign Up</button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
