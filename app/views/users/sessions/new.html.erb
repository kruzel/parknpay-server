<%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'well' } do |f| %>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= f.email_field :email, autofocus: true, class: 'span2', placeholder: 'Email address' %>
  </div>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-key"></i></span>
    <%= f.password_field :password, class: 'span2', placeholder: 'Password' %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <label>
      <%= f.check_box :remember_me %> Remember me
    </label>
  <% end -%>
  <br>
  <div class="input-prepend">
    <button class="btn btn-danger"><i class="icon-check"></i> Sign In</button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
